<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Error">
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/maintenance"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/devsBusy"
            android:layout_width="wrap_content"
            android:layout_height="360dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="devsBusy.json"
            app:lottie_loop="true"
            tools:ignore="MissingConstraints"/>
        <TextView
            android:id="@+id/title1"
            android:textSize="20sp"
            android:textAlignment="center"
            android:fontFamily="@font/ubuntu"
            android:text="@string/maintenance_going_on"
            android:layout_below="@id/devsBusy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:padding="10dp"
            android:textSize="15sp"
            android:textAlignment="center"
            android:fontFamily="@font/ubuntu"
            android:text="@string/maintenance_message"
            android:layout_below="@id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/error"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/unknownError"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="unknownError.json"
            app:lottie_loop="true"
            tools:ignore="MissingConstraints"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/title2"
            android:textSize="20sp"
            android:textAlignment="center"
            android:fontFamily="@font/ubuntu"
            android:text="@string/an_error_occurred"
            android:layout_below="@id/unknownError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ue_message"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:padding="15dp"
            android:textSize="15sp"
            android:textAlignment="center"
            android:fontFamily="@font/ubuntu"
            android:text="@string/unknown_error_message"
            android:layout_below="@id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:gravity="center"
            android:layout_below="@id/ue_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/app_restart"
            android:fontFamily="@font/ubuntu"
            android:textAllCaps="false"
            android:text="@string/restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>