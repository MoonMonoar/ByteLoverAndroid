<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slide_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_robust"
    tools:context=".Slides">
    <RelativeLayout
        android:id="@+id/slide_view"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/slide_one"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="50dp"
                android:textColor="@color/white_robust"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="@font/ubuntu"
                android:text="@string/live_classes_with_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="30dp"
                android:textAlignment="center"
                android:textColor="@color/white_robust"
                android:textSize="18sp"
                android:fontFamily="@font/ubuntu"
                android:text="@string/course_feature_1_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry"/>
            <com.airbnb.lottie.LottieAnimationView
                android:layout_marginTop="-50dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="homeImage1.json"
                app:lottie_loop="true"
                tools:ignore="MissingConstraints"/>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="-40dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="15sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="8sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="8sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="8sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/slide_two"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="50dp"
                android:textColor="@color/white_robust"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="@font/ubuntu"
                android:text="@string/_45_minute_theory_45_minute_problem_solving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="30dp"
                android:textAlignment="center"
                android:textColor="@color/white_robust"
                android:textSize="18sp"
                android:fontFamily="@font/ubuntu"
                android:text="@string/course_feature_message_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry"/>
            <com.airbnb.lottie.LottieAnimationView
                android:layout_marginTop="-70dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="homeImage2.json"
                app:lottie_loop="true"
                tools:ignore="MissingConstraints"/>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="-40dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="8sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="15sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="8sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="8sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/slide_three"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="50dp"
                android:textColor="@color/white_robust"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="@font/ubuntu"
                android:text="@string/quizzes_with_every_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="30dp"
                android:textAlignment="center"
                android:textColor="@color/white_robust"
                android:textSize="18sp"
                android:fontFamily="@font/ubuntu"
                android:text="@string/course_feature_3_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry"/>
            <com.airbnb.lottie.LottieAnimationView
                android:layout_marginTop="-50dp"
                android:padding="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="homeImage3.json"
                app:lottie_loop="true"
                tools:ignore="MissingConstraints"/>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="-40dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="8sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="8sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="15sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="8sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/slide_four"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="50dp"
                android:textColor="@color/white_robust"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="@font/ubuntu"
                android:text="@string/exam_every_weekend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="30dp"
                android:textAlignment="center"
                android:textColor="@color/white_robust"
                android:textSize="18sp"
                android:fontFamily="@font/ubuntu"
                android:text="@string/course_feature_4_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry"/>
            <com.airbnb.lottie.LottieAnimationView
                android:layout_marginTop="-50dp"
                android:padding="25dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="homeImage4.json"
                app:lottie_loop="true"
                tools:ignore="MissingConstraints"/>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="-40dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="8sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="8sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="8sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white_robust"
                    android:textSize="15sp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/dot_icon"
                    tools:ignore="SmallSp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/slide_view"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/skip"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/skip_icon"
                android:gravity="center"
                android:textColor="@color/white_robust"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/font_awesome_regular"
                android:text="\uf00d"
                android:layout_width="55dp"
                android:layout_height="55dp"/>
            <TextView
                android:id="@+id/skip_text"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="-10dp"
                android:textStyle="bold"
                android:textColor="@color/white_robust"
                android:textSize="18sp"
                android:fontFamily="@font/ubuntu"
                android:text="@string/skip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/slide_next"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:textColor="@color/white_robust"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/ubuntu"
            android:text="@string/next"
            android:layout_width="80dp"
            android:layout_height="55dp"/>
            <TextView
                android:layout_marginEnd="15dp"
                android:layout_marginStart="-10dp"
                android:textStyle="bold"
                android:textColor="@color/white_robust"
                android:textSize="18sp"
                android:fontFamily="@font/font_awesome_regular"
                android:text="@string/arrow_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/continue_app"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:textColor="@color/white_robust"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/ubuntu"
                android:text="@string/continue_text"
                android:layout_width="80dp"
                android:layout_height="55dp"/>
            <TextView
                android:layout_marginEnd="15dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textColor="@color/white_robust"
                android:textSize="18sp"
                android:fontFamily="@font/font_awesome_regular"
                android:text="\uf144"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>