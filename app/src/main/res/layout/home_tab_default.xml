<ScrollView android:scrollbarThumbVertical="@drawable/scrollbar_thumb_main"
    android:id="@+id/home_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/goto_dash"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/button_background"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:padding="7dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white_robust"
                android:textSize="22sp"
                android:fontFamily="@font/font_awesome_regular"
                android:text="@string/user_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginEnd="5dp"
                android:textStyle="bold"
                android:textColor="@color/white_robust"
                android:textSize="18sp"
                android:fontFamily="@font/ubuntu"
                android:text="@string/student_go_to_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:textColor="@color/white_robust"
                android:textSize="20sp"
                android:fontFamily="@font/font_awesome_regular"
                android:text="@string/arrow_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@drawable/card_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/ide_ad_title"
                    android:textColor="@color/main"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/programming_ide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/ide_ad_message"
                    android:paddingEnd="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/ide_ad_title"
                    android:textColor="@color/main"
                    android:textSize="14sp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/ide_ad_message_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />
                <Button
                    android:background="@drawable/button_background"
                    android:id="@+id/open_ide"
                    android:textAllCaps="false"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/ide_ad_message"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/open_ide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="match_parent">
                <com.airbnb.lottie.LottieAnimationView
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/ide_ad_animation"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="ideAd.json"
                    app:lottie_loop="true"
                    tools:ignore="MissingConstraints"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/button_background"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white_robust"
                    android:textSize="18sp"
                    android:fontFamily="@font/font_awesome_regular"
                    android:text="@string/magic_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/white_robust"
                    android:textSize="18sp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/course_features"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/feature_expand"
                android:layout_marginEnd="15dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/main"
                android:fontFamily="@font/font_awesome_regular"
                android:text="@string/expand_icon"
                android:layout_width="48dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:padding="15dp"
                android:background="@drawable/feature_card_one_background"
                android:layout_width="match_parent"
                android:layout_height="420dp">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_marginTop="-10dp"
                    android:id="@+id/home_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="homeImage1.json"
                    app:lottie_loop="true"
                    tools:ignore="MissingConstraints"/>
                <TextView
                    android:id="@+id/feature_1_title"
                    android:layout_below="@id/home_image_1"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white_robust"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/live_classes_with_records"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/f1_t"
                    android:paddingEnd="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/feature_1_title"
                    android:textColor="@color/white_robust"
                    android:textSize="14sp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/course_feature_1_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry"/>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/f1_t"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:src="@drawable/baseline_access_time_24"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/white_robust"
                            android:fontFamily="@font/ubuntu"
                            android:text="@string/_90_minutes_class"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:src="@drawable/baseline_video_chat_24"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/white_robust"
                            android:fontFamily="@font/ubuntu"
                            android:text="@string/google_meet"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/feature_card_two_background"
                android:layout_width="match_parent"
                android:layout_height="420dp">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/home_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="homeImage2.json"
                    app:lottie_loop="true"
                    tools:ignore="MissingConstraints"/>
                <TextView
                    android:id="@+id/feature_2_title"
                    android:layout_below="@id/home_image_2"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white_robust"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/_45_minute_theory_45_minute_problem_solving"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/f2_t"
                    android:paddingEnd="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/feature_2_title"
                    android:textColor="@color/white_robust"
                    android:textSize="14sp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/course_feature_message_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry"/>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/f2_t"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:src="@drawable/baseline_access_time_24"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/white_robust"
                            android:fontFamily="@font/ubuntu"
                            android:text="@string/_45_min_class"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:src="@drawable/baseline_computer_24"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/white_robust"
                            android:fontFamily="@font/ubuntu"
                            android:text="@string/live_ide"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/feature_card_three_background"
                android:layout_width="match_parent"
                android:layout_height="420dp">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_marginTop="20dp"
                    android:id="@+id/home_image_3"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="homeImage3.json"
                    app:lottie_loop="true"
                    tools:ignore="MissingConstraints"/>
                <TextView
                    android:id="@+id/feature_3_title"
                    android:layout_below="@id/home_image_3"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white_robust"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/quizzes_with_every_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/f3_t"
                    android:paddingEnd="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/feature_3_title"
                    android:textColor="@color/white_robust"
                    android:textSize="14sp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/course_feature_3_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry"/>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/f3_t"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:src="@drawable/baseline_access_time_24"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/white_robust"
                            android:fontFamily="@font/ubuntu"
                            android:text="15 Min/Quizz"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:src="@drawable/baseline_phonelink_24"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/white_robust"
                            android:fontFamily="@font/ubuntu"
                            android:text="Online exam"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/feature_card_four_background"
                android:layout_width="match_parent"
                android:layout_height="420dp">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_marginTop="15dp"
                    android:id="@+id/home_image_4"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="homeImage4.json"
                    app:lottie_loop="true"
                    tools:ignore="MissingConstraints"/>
                <TextView
                    android:id="@+id/feature_4_title"
                    android:layout_below="@id/home_image_4"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white_robust"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/exam_every_weekend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/f4_t"
                    android:paddingEnd="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/feature_4_title"
                    android:textColor="@color/white_robust"
                    android:textSize="14sp"
                    android:fontFamily="@font/ubuntu"
                    android:text="@string/course_feature_4_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry"/>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/f4_t"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:src="@drawable/baseline_access_time_24"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/white_robust"
                            android:fontFamily="@font/ubuntu"
                            android:text="@string/_70_min_exam"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:src="@drawable/baseline_phonelink_24"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/white_robust"
                            android:fontFamily="@font/ubuntu"
                            android:text="Online exam"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>