<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:baselineAligned="false"
        android:elevation="2.5dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/live_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tab_live"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/ubuntu"
                android:gravity="center"
                android:text="@string/live"
                android:textColor="@color/main"
                android:textSize="16sp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tab_live"
                android:layout_marginTop="-1dp"
                android:background="@color/main" />
            </RelativeLayout>
            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                android:id="@+id/live_inactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="center"
                    android:text="@string/live"
                    android:textColor="@color/grey_text"
                    android:textSize="16sp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                android:id="@+id/record_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tab_record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="center"
                    android:text="@string/recorded"
                    android:textColor="@color/main"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tab_record"
                    android:layout_marginTop="-1dp"
                    android:background="@color/main" />
            </RelativeLayout>
            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/record_inactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="center"
                    android:text="@string/recorded"
                    android:textColor="@color/grey_text"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/main_scroll"
        android:visibility="gone"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableLayout
                android:id="@+id/course_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TableLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/load"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/ic_holder"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.airbnb.lottie.LottieAnimationView
                android:visibility="gone"
                android:id="@+id/no_course"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:lottie_fileName="relax.json"
                app:lottie_loop="true"
                tools:ignore="MissingConstraints"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loading"
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:lottie_fileName="searching.json"
                app:lottie_loop="true"
                tools:ignore="MissingConstraints"/>
            <com.airbnb.lottie.LottieAnimationView
                android:visibility="gone"
                android:id="@+id/failed"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:lottie_fileName="mortyCry.json"
                app:lottie_loop="true"
                tools:ignore="MissingConstraints"/>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="17dp"
            android:id="@+id/error_message"
            android:fontFamily="@font/ubuntu"
            android:gravity="center"
            android:text=""
            android:layout_below="@id/ic_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>