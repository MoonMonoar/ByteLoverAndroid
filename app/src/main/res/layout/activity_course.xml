<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Course">
    <RelativeLayout
        android:elevation="2.5dp"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:id="@+id/back"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/baseline_arrow_back_24"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:contentDescription="@string/go_back" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginStart="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <TextView
                android:layout_marginEnd="60dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/title"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/ubuntu"
                android:textColor="@color/white_robust"
                android:gravity="center|left"
                android:text="@string/course"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="RtlHardcoded" />
            <ImageView
                android:id="@+id/share"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_share_24"
                android:layout_width="60dp"
                android:padding="17dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/go_back" />
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical"
                android:background="@drawable/course_child_background">
                <TextView
                    android:textSize="16sp"
                    android:fontFamily="@font/ubuntu"
                    android:id="@+id/course_title"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="16sp"
                    android:fontFamily="@font/ubuntu"
                    android:id="@+id/course_short_description"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_margin="5dp"
                    android:padding="15dp"
                    android:background="@drawable/border"
                    android:textSize="16sp"
                    android:fontFamily="@font/ubuntu"
                    android:id="@+id/course_full_description"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:text="@string/course_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/course_code"
                        android:textSize="16sp"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:text="@string/level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/course_level"
                        android:textSize="16sp"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:text="@string/batch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/course_batch"
                        android:textSize="16sp"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:text="@string/slot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/course_slot"
                        android:textSize="16sp"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:text="@string/duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/course_duration"
                        android:textSize="16sp"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:text="Start date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/course_date_start"
                        android:textSize="16sp"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:text="@string/end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/course_date_end"
                        android:textSize="16sp"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:text="@string/course_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/course_language"
                        android:textSize="16sp"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:text="@string/course_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/text_dark"
                        android:fontFamily="@font/ubuntu"
                        android:text="@string/colon_space"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/course_price"
                        android:textSize="16sp"
                        android:textColor="@color/price"
                        android:fontFamily="@font/ubuntu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/border_booking"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="@color/white"
                            android:paddingStart="10dp"
                            android:paddingEnd="5dp"
                            android:gravity="center"
                            android:text="@string/fa_buy"
                            android:fontFamily="@font/font_awesome_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:fontFamily="@font/ubuntu"
                            android:text="@string/book_now"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </TableLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>